{% extends 'base.html.twig' %}

{% block title %}Modification du Comment{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
{% include 'flash.html.twig' %}
<div class="container">
    <h1 class="text-center mt-5 mb-5">Modification du commentaire</h1>

    {{ form_start(form) }}
        <section class="text-danger">{{ form_errors(form) }}</section>
        <section class="form-group">
            <div class="text-danger">{{ form_errors(form.content) }}</div>
            <label class="mb-3">{{ form_label(form.content) }}</label>
            <div>{{ form_widget(form.content) }}</div>
            <small class="form-text text-muted">{{ form_help(form.content) }}</small>
        </section>    
        <button name="comment_update" class="btn btn-outline-lg btn-primary mt-3" type="submit">Modifier</button>
    {{ form_end(form) }}

    
    <a class="btn btn-primary mt-4" href="{{ path('home') }}">Retour Ã  l'accueil</a>
</div>
    
{% include 'footer.html.twig' %}
{% endblock %}
